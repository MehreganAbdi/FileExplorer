@using FileExplorer.DTOs;
@model FileEntityDTO

@{
    ViewData["Title"] = "Edit FileEntity";
    Layout = "CustomLayout";
    var allprojectNames = ViewBag.data;
}
<script src="~/js//FileEntity.Edit/FileEntityEdit.js"></script>
 
<script>

    document.getElementById("fileentityeditformname").onkeyup = function () { return CountCharsName() };

    document.getElementById("fileentityeditformfilepath").onkeyup = function () { return CountCharsFilePath() };

    document.getElementById("fileentityeditformdesc").onkeyup = function () { return CountCharsDesc() };

    document.getElementById("fileentityform").onsubmit = function () { return validation() };
</script>


<body>
    <form method="post" asp-action="Edit"   id="fileentityeditform" enctype="multipart/form-data">
        <input type="hidden" value="@Model.Id"/>
        <div class="form-group">
            <label asp-for="Name">Name</label>
            <input asp-for="Name" type="text" id="fileentityeditformnamename" class="btn-primary" placeholder="Enter Name">

            <small id="name_count">100 . @Model.Name.Length</small>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>



        <br />
        <div class="form-group">
            <label asp-for="FilePath">FilePath</label>
            <input asp-for="FilePath" type="text" id="fileentityeditformname" class="btn-primary" placeholder="Enter FilePath">
            <small id="filepath_count">180 . @Model.FilePath.Length</small>
            <span asp-validation-for="FilePath" class="text-danger"></span>
        </div>

        <br />
        <div class="form-group">
            <label asp-for="DateCreated">DateCreated</label>
            <input asp-for="DateCreated" type="date" class="btn-primary" placeholder="Enter DateCreated">
            <span asp-validation-for="DateCreated" class="text-danger"></span>
        </div>

        <br />

        <input type="hidden" asp-for="ProjectId" value="0" />

        <div class="form-group">
            <label asp-for="ProjectName">ProjectName</label>
            <select asp-for="ProjectName" onselect="@Model.ProjectName" >
                @foreach (var project in allprojectNames)
                {
                    <option itemid="@project.Id.ToString()" onclick="assignToModel('@project.ProjectName')">@project.ProjectName</option>

                }
            </select>
            <span asp-validation-for="ProjectName" class="text-danger"></span>
        </div>

        <br />
        <div class="form-group">
            <label asp-for="Size">Size</label>
            <input asp-for="Size" type="text" class="btn-primary" placeholder="Size">
            <span asp-validation-for="Size" class="text-danger"></span>
        </div>
        <br />
        <div class="form-group">
            <label asp-for="Description">Description</label>
            <input asp-for="Description" type="text" id="fileentityeditformdesc" class="btn-primary" placeholder="Description">
            <small id="desc_count">150 . @Model.Description.Length</small>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <br />

        <div class="form-group">
            <label asp-for="Type">Type</label>
            <input asp-for="Type" type="text" class="btn-primary" placeholder="Enter Type">
            <span asp-validation-for="Type" class="text-danger"></span>
        </div>
        <br />
        <br />
        <br />


        <br />
        <button type="submit" class="btn-primary">Submit</button>
    </form>

</body>