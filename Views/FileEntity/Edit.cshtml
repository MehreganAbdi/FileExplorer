@using FileExplorer.DTOs;
@model FileEntityDTO

@{
    ViewData["Title"] = "Edit FileEntity";
    Layout = "CustomLayout";
    var allprojectNames = ViewBag.data;
}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/limonte-sweetalert2/7.11.0/sweetalert2.css" />
<script src="https://cdnjs.cloudflare.com/ajax/libs/limonte-sweetalert2/7.11.0/sweetalert2.all.min.js"></script>

<script type="text/javascript" src="~/lib/jquery/dist/jquery.js"></script>
<script type="text/javascript" src="~/lib/jquery/dist/jquery.min.js"></script>



<div class="container">
    <br />
    <br />
    <center>
        <h3 class="text-dark border border-dark border-left-0 border-bottom-0 border-right-0 ">. Edit Record . </h3>
    </center>



    <center style="display:none" id="redirecttofileentityindex">
        <a asp-controller="FileEntity" asp-action="Index" class="btn btn-outline-info">All Records</a>

    </center>




    <form id="editfileentityform" enctype="multipart/form-data">

        <input asp-for="Size" value="@Model.Size" type="hidden" />
        <input asp-for="Type" value="@Model.Type" type="hidden" />
        <input asp-for="Id" value="@Model.Id" type="hidden" />
        <input asp-for="DateCreated" value="@Model.DateCreated" type="hidden" />
        <br />
        <br />


        <div class="row ">
            <label asp-for="Name" for="fileentityeditformname" class="justify-content-start text-dark">Name</label>
        </div>

        <div class="row ">
            <input asp-for="Name" id="fileentityeditformname" type="text" class="form-control col-12 " placeholder="Enter FilePath">
        </div>

        <div class="row justify-content-end">
            <small class="justify-content-end" id="namecount">100 / @Model.Name.Length </small>
        </div>



        <br />

        <div class="row">
            <label asp-for="FilePath" for="fileentityeditformfilepath" class=" justify-content-start ">FilePath</label>
        </div>
        <div class="row">
            <input asp-for="FilePath" id="fileentityeditformfilepath" type="text" class="form-control col-12 " placeholder="Enter FilePath">
        </div>
        <div class="row justify-content-end">
            <small id="filepathcount" class="justify-content-end">180 / @Model.FilePath.Length </small>
        </div>


        <br />


        <div class="row ">
            <label asp-for="Description" for="fileentityeditformdesc" class="justify-content-start text-dark">Description</label>
        </div>

        <div class="row">
            <input asp-for="Description" id="fileentityeditformdesc" type="text" class="form-control col-12 " placeholder="Description">
        </div>

        <div class="row justify-content-end">
            <small id="desccount" class="justify-content-end">150 / @Model.Description.Length</small>
        </div>

        <br />


        <div class="row">
            <label asp-for="ProjectName" class="justify-content-end text-dark">ProjectName</label>
        </div>

        <div class="row">

            <select asp-for="ProjectId" class="col-12 form-control">
                @foreach (var project in allprojectNames)
                {
                    <option value="@project.Id" ><center>@project.ProjectName</center></option>

                }
            </select>
        </div>

        <br />
        <br />
        <div class="row justify-content-end container">
            <input type="button" id="editfileentitysubmit" class="btn btn-success col-3 col-sm-3 col-md-2 col-lg-1 col-xl-1 justify-content-start" value="submit" class="btn btn-success " />
        </div>

    </form>





</div>


<script src="~/js/FileEntity.Edit/FileEntityEdit.min.js"></script>

