@using FileExplorer.DTOs;
@model FileEntityDTO

@{
    ViewData["Title"] = "Edit FileEntity";
    Layout = "CustomLayout";
    var allprojectNames = ViewBag.data;
}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/limonte-sweetalert2/7.11.0/sweetalert2.css" />
<script src="https://cdnjs.cloudflare.com/ajax/libs/limonte-sweetalert2/7.11.0/sweetalert2.all.min.js"></script>

<script src="~/js//FileEntity.Create/FileEntityCreate.js"></script>

<body>
    <form method="post" id="fileentityeditform" asp-action="Create" enctype="multipart/form-data">
         
        <input asp-for="Size" value="0" type="hidden" />
        <input asp-for="Type" value="type" type="hidden" />

        <br />
        <div class="form-group">
            <label asp-for="Name">Name</label>
            <input asp-for="Name" id="fileentityeditformname" type="text"  class="btn-primary createhome" placeholder="Enter FilePath">
            <small id="namecount">100 / @Model </small>
            <span asp-validation-for="FilePath" class="text-danger"></span>
        </div>

        <br />
        <div class="form-group">
            <label asp-for="FilePath">FilePath</label>
            <input asp-for="FilePath" id="fileentityeditformfilepath" type="text"   class="btn-primary createhome" placeholder="Enter FilePath">
            <small id="filepathcount">180 / @Model.FilePath.Length </small>
            <span asp-validation-for="FilePath" class="text-danger"></span>
        </div>

        <br />


        <br />
        <div class="form-group">
            <label asp-for="Description">Description</label>
            <input asp-for="Description" id="fileentityeditformdesc" type="text" class="btn-primary createhome" placeholder="Description">
            <small id="desccount">150 / @Model.Description.Length</small>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <br />
         

        <br />

        <input type="hidden" asp-for="ProjectId" value="0" />

        <div class="form-group">
            <label>
                 

                <input asp-for="FileToCopy" id="fileentityeditformfile" style="display:none;" type="file" class="btn-primary">
            </label>
            <br />
            <small id="filepath_count"></small>
            <label asp-for="ProjectName">ProjectName</label>
            <select asp-for="ProjectName">
                @foreach (var project in allprojectNames)
                {
                    <option >@project.ProjectName</option>

                }
            </select>
            <span asp-validation-for="ProjectName" class="text-danger"></span>
        </div>

        

        <br />
        <button type="submit" class="btn-primary">Submit</button>
    </form>




</body>


<script src="~/js//FileEntity.Edit/FileEntityEdit.js"></script>

<script>

    document.getElementById("fileentityeditformname").onkeyup = function () { return CountCharsName() };

    document.getElementById("fileentityeditformfilepath").onkeyup = function () { return CountCharsFilePath() };

    document.getElementById("fileentityeditformdesc").onkeyup = function () { return CountCharsDesc() };

    document.getElementById("fileentityeditform").onsubmit = function () { return validation() };
</script>
