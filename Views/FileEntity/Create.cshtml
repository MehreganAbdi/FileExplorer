@using FileExplorer.DTOs;
@model FileEntityDTO
@{
    ViewData["Title"] = "Add file Record";
    Layout = "CustomLayout";
    var allProjectNames = ViewBag.data.AllProjects;
    List<string> recentPaths = ViewBag.recentPaths.recentPaths;
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/limonte-sweetalert2/7.11.0/sweetalert2.css" />
<script src="https://cdnjs.cloudflare.com/ajax/libs/limonte-sweetalert2/7.11.0/sweetalert2.all.min.js"></script>

@if (Model.CreateErrorTD != null)
{
    <small>@Model.CreateErrorTD</small>
}
@if (Model.Error != null)
{
    <small>@Model.Error</small>
}

<body>

  
    
    <form method="post" id="fileentitycreatefrom" asp-action="Create" enctype="multipart/form-data">
        <input asp-for="Name" value="NewFile" type="hidden" />
        <input asp-for="Size" value="0" type="hidden" />
        <input asp-for="Type" value="type" type="hidden" />


        <br />
        <div class="form-group" style="position:relative;width:500px;height:15px;border:0;padding:0;margin:0;">
           
             
            <select class="projectselect-dropdown filepath-sug project-dropdown"
                  
            id="pathsuggestion" >
               <option></option>
                @foreach (var path in recentPaths)
                {
                    <option value="@path">@path </option>
                }
            </select>
            <input asp-for="FilePath" id="fileentitycreatefromfilepath" type="text"
                   style="border:none;"
            class="btn-primary createhome filepath-sug" 
            placeholder="Enter FilePath"  >
            <small id="filepathcount" style="position:absolute;top:20px;right:0px;">180 / 0 </small>
            <span asp-validation-for="FilePath" class="text-danger"></span>
        </div>

        <br />


        <br />
        <div class="form-group">
            <label asp-for="Description">Description</label>
            <input asp-for="Description" id="fileentitycreatefromdesc" type="text" class="btn-primary createhome" placeholder="Description">
            <small id="desccount">150 / 0</small>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>












        <div class="form-group">
            <br />
            <small id="filepath_count"></small>
            <label asp-for="ProjectName">ProjectName</label>
            <select asp-for="ProjectName" class="project-selection">
                @foreach (var project in allProjectNames)
                {
                    <option  >@project.ProjectName</option>

                }
            </select>
            <span asp-validation-for="ProjectName" class="text-danger"></span>
        </div>

        <br />
            <label id="createfileentityselectfile">
                Select File

                <input asp-for="FileToCopy" id="fileentitycreatefromfile" type="file" class="btn-primary">
            </label>

        <br />
        <br />
        <br />


        <br />
        <button type="submit" class="btn-primary">Submit</button>
    </form>




</body>

<script src="~/js//FileEntity.Create/FileEntityCreate.js"></script>

 