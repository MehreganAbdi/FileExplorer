@using FileExplorer.DTOs;
@model FileEntityDTO
@{
    ViewData["Title"] = "Add file Record";
    Layout = "CustomLayout";
    var allProjectNames = ViewBag.data;
}


<script src="~/js//FileEntity.Create/FileEntityCreate.js"></script>
<script>

    document.getElementById("fileentitycreatefrom").onsubmit(validation);

    document.getElementById("fileentitycreatefromname").onkeyup = function () { return CountCharsName() };

    document.getElementById("fileentitycreatefromfilepath").onkeyup = function () { return CountCharsFilePath() };

    document.getElementById("fileentitycreatefromdesc").onkeyup = function () { return CountCharsDesc() };
</script>

<body>
    <form method="post" id="fileentitycreatefrom" onsubmit="return validation()" asp-action="Create" enctype="multipart/form-data">
        <input asp-for="Name" value="NewFile" type="hidden"/>
        <input asp-for="Size" value="0" type="hidden" />
        <input asp-for="Type" value="type" type="hidden"/>
        
        
        <br />
        <div class="form-group">
            <label asp-for="FilePath">FilePath</label>
            <input asp-for="FilePath" id="fileentitycreatefromfilepath" type="text" onkeyup="CountCharsFilePath(this)" class="btn-primary" placeholder="Enter FilePath">
            <small id="filepath_count">180 . 0 </small>
            <span asp-validation-for="FilePath" class="text-danger"></span>
        </div>

        <br />
        


        <div class="form-group">
            <label>Select File 

            <input asp-for="FileToCopy"  type="file"  class="btn-primary" >
            </label>
            <br />
            <small id="filepath_count"></small>
            <span asp-validation-for="FileToCopy" class="text-danger"></span>
        </div>
      




        <br />

        <input type="hidden" asp-for="ProjectId" value="0" />

        <div class="form-group">
            <label asp-for="ProjectName">ProjectName</label>
            <select asp-for="ProjectName">
                @foreach (var project in allProjectNames)
                {
                    <option itemid="@project.Id.ToString()" onclick="assignToModel('@project.ProjectName')">@project.ProjectName</option>

                }
            </select>
            <span asp-validation-for="ProjectName" class="text-danger"></span>
        </div>

        <br />
        
        <br />
        <div class="form-group">
            <label asp-for="Description">Description</label>
            <input asp-for="Description" id="fileentitycreatefromdesc" type="text" class="btn-primary" placeholder="Description">
            <small id="desc_count">150 . 0</small>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <br />

      
        <br />
        <br />
        <br />


        <br />
        <button type="submit" class="btn-primary">Submit</button>
    </form>

</body>