@using FileExplorer.DTOs;
@model FileEntityDTO
@{
    ViewData["Title"] = "Add file Record";
    Layout = "CustomLayout";
    var allProjects = ViewBag.data;
    var recentPaths = ViewBag.recentPaths;
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/limonte-sweetalert2/7.11.0/sweetalert2.css" />
<script src="https://cdnjs.cloudflare.com/ajax/libs/limonte-sweetalert2/7.11.0/sweetalert2.all.min.js"></script>
<script type="text/javascript" src="~/lib/jquery/dist/jquery.js"></script>
<script type="text/javascript" src="~/lib/jquery/dist/jquery.min.js"></script>

<br />
<br />



<a id="fileentitycreatereturntohome" asp-action="Index" asp-controller="FileEntity" style="display:none" class="btn-primary">Record Added , Redirect To Home</a>

<body>



    <form method="post" id="fileentitycreatefrom" asp-action="Create" enctype="multipart/form-data">
        <input asp-for="Name" value="NewFile" type="hidden" id="fileentitycreatefromname" />
        <input asp-for="ImageLink" id="fileentitycreatefromimagelink" type="hidden" />
        <input asp-for="Size" type="hidden" id="fileentitycreatefromsize" />
        <input asp-for="Type" type="hidden" id="fileentitycreatefromtype" />


        <br />
        <div class="form-group row w-100" style="position:relative;width:505px;height:15px;border:0;padding:0;margin:0;">


            <label>Path</label>
            <br />
            <select id="pathsuggestion" class="filepath-sug">

                @foreach (var path in recentPaths)
                {
                    <option value="@path">@path </option>
                }

            </select>

            <input asp-for="FilePath" id="fileentitycreatefromfilepath" type="text"
                   class="from-control filepath-sug"
                   placeholder="Enter FilePath">
                   <br />
            @* <small id="filepathcount">180 / 0 </small> *@
        </div>
        <br />

        <div class="form-group row w-100">
            <label asp-for="Description">Description</label>
            <input asp-for="Description" id="fileentitycreatefromdesc" type="text" class="form-control " placeholder="Description">
            <small id="desccount">150 / 0</small>
        </div>

        <div class="form-group  row w-100">

            <label for="projectidselect">ProjectName </label>
            <select asp-for="ProjectId" id="projectidselect" class="fileentity-create-project-selection">
                @foreach (var project in allProjects)
                {
                    <option value="@project.Id">@project.ProjectName</option>
                }

            </select>
        </div>

        <br />
        <div class="form-group row w-100">

            <label>
                <span id="createfileentityselectfile" style="color:dodgerblue; font-size:15px;">SelectFile</span>

                <input asp-for="FileToCopy" name="filetocopy" id="fileentitycreatefromfile" type="file">
            </label>
        </div>

        <input class="btn btn-success" type="button" value="Submit" id="fileentitycreateformsubmit" />



    </form>




</body>

<script src="~/js//FileEntity.Create/FileEntityCreate.min.js"></script>

