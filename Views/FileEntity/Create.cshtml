@using FileExplorer.DTOs;
@model FileEntityDTO
@{
    ViewData["Title"] = "Add file Record";
    Layout = "CustomLayout";
    var allProjects = ViewBag.data;
    var recentPaths = ViewBag.recentPaths;
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/limonte-sweetalert2/7.11.0/sweetalert2.css" />
<link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.3/css/select2.css">
<link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/select2-bootstrap-css/1.4.6/select2-bootstrap.css">
<script src="https://cdnjs.cloudflare.com/ajax/libs/limonte-sweetalert2/7.11.0/sweetalert2.all.min.js"></script>

<script type="text/javascript" src="~/lib/jquery/dist/jquery.js"></script>

<script type="text/javascript" src="~/lib/jquery/dist/jquery.min.js"></script>
<link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.3/css/select2.css">

<br />
<br />

<style>

</style>


<a id="fileentitycreatereturntohome" asp-action="Index" asp-controller="FileEntity" style="display:none;" class="btn btn-outline-info">All Records</a>
<br />
<br>


<body>



    <form method="post" id="fileentitycreatefrom" asp-action="Create" enctype="multipart/form-data">
        <input asp-for="Name" value="NewFile" type="hidden" id="fileentitycreatefromname" />
        <input asp-for="ImageLink" id="fileentitycreatefromimagelink" type="hidden" />
        <input asp-for="Size" type="hidden" id="fileentitycreatefromsize" />
        <input asp-for="Type" type="hidden" id="fileentitycreatefromtype" />


        <br />
        <div class="row">


            <label class="col-3 justify-content-end text-dark">Path</label>

            <br />
            <select id="pathsuggestion" class="form-control col-6 btn btn-outline-dark border-0">

                @foreach (var path in recentPaths)
                {
                    <option class="bg-dark text-light" value="@path">@path </option>
                }

            </select>
            <br />
        </div>
        <div class="row" style="height:10px;">
            <label is-acceptable="false" class="text-danger col-12" id="validatenamealerter"></label>
        </div>




        <br />

        <div class="row ">
            <label asp-for="Description" class="col-3 justify-content-end text-dark">Description</label>
            <input asp-for="Description" id="fileentitycreatefromdesc" type="text" class="form-control col-6 btn btn-outline-dark border-0" placeholder="Description">
            <small id="desccount">150 / 0</small>
        </div>

        <div class="row ">

            <label for="projectidselect" class="col-3 justify-content-end text-dark">ProjectName </label>
            <select asp-for="ProjectId" id="projectidselect" class="form-control col-6 btn btn-outline-dark border-0">
                @foreach (var project in allProjects)
                {
                    <option value="@project.Id">@project.ProjectName</option>
                }

            </select>
        </div>

        <br />
        <div class="row">

                <label id="createfileentityselectfile" class="col-3 border-0 text-dark btn btn-outline-dark justify-content-end">
            select file here
            </label>

            <input asp-for="FileToCopy" name="FileToCopy" id="fileentitycreatefromfile" type="file" class="form-control col-7 btn btn-outline-dark border-0">

           
        </div>

        <br />
        <br />

        <div class="row justify-content-end container">

            <input class="btn btn-success" type="button" value="Submit" id="fileentitycreateformsubmit" />
        </div>


    </form>



</body>

<script src="~/js//FileEntity.Create/FileEntityCreate.js"></script>
