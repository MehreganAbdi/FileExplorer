@using FileExplorer.DTOs;
@model FileEntityDTO
@{
    ViewData["Title"] = "Add file Record";
    Layout = "CustomLayout";
    var allProjectNames = ViewBag.data;
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/limonte-sweetalert2/7.11.0/sweetalert2.css" />
<script src="https://cdnjs.cloudflare.com/ajax/libs/limonte-sweetalert2/7.11.0/sweetalert2.all.min.js"></script>


<body>
    <form method="post" id="createform" asp-action="Create" enctype="multipart/form-data" >

        <input type="file" asp-for="FileToCopy" value="@Model.FileToCopy" />
S
        <div class="form-group">
            <label asp-for="Name">Name</label>
            <input asp-for="Name" id="createname" type="text"  class="btn-primary createhome" placeholder="Enter Name">
            <small id="name_count">100 . @Model.Name.Length</small>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>



        <br />
        <div class="form-group">
            <label asp-for="FilePath">FilePath</label>
            <input asp-for="FilePath"   id="createfilepath" type="text" class="btn-primary createhome" placeholder="Enter FilePath">
            <small id="filepath_count">180 . @Model.FilePath.Length </small>
            <span asp-validation-for="FilePath" class="text-danger"></span>
        </div>

        
        <br /> 
        <input type="hidden" asp-for="ProjectId" value="0" />

        <br />
        <div class="form-group">
            <label asp-for="DateCreated">DateCreated</label>
            <input asp-for="DateCreated" style="margin-left:10px" type="date" class="btn-primary createhome" placeholder="Enter DateCreated">
            <small id="desc_count"></small>
            <span asp-validation-for="DateCreated" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Description">Description</label>
            <input asp-for="Description" type="text"  id="createdescription" class="createhome btn-primary" placeholder="Description">
            <small id="desc_count" >150 / @Model.Description.Length</small>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <br />
        <div class="form-group">
            <label asp-for="ProjectName">ProjectName</label>
            <select asp-for="ProjectName" style="width:100px " class="bg-opacity-10 align-content-md-center">
                @foreach (var project in allProjectNames)
                {
                    <option itemid="@project.Id.ToString()" onclick="assignToModel('@project.ProjectName')">@project.ProjectName</option>

                }
            </select>
            <span asp-validation-for="ProjectName" class="text-danger"></span>
        </div>


        <div class="form-group">
            <input asp-for="Size" type="hidden" class="btn-primary" >
            <input asp-for="Type" type="hidden" class="btn-primary" >
            <label >Size : @Model.Size , Type : @Model.Type</label>
            
            <span asp-validation-for="Type" class="text-danger"></span>
        </div>
        <br />
        <br />
        <br />


        <br />
        <button type="submit" class="btn-primary">Submit</button>
    </form>

<script src="~/js/Home.Create/HomeCreate.js" type="text/javascript"></script> 


<script>
    document.getElementById("createform").onsubmit(validation);
    document.getElementById("createname").onkeyup = function () {return CountCharsName() };
    document.getElementById("createfilepath").onkeyup = function () { return CountCharsFilePath() };
    document.getElementById("createdescription").onkeyup = function () { return CountCharsDesc() };
</script>


</body>
