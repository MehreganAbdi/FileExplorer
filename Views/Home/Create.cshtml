@using FileExplorer.DTOs;
@model FileEntityDTO
@{
    ViewData["Title"] = "Add file Record";
    Layout = "CustomLayout";
    var allProjectNames = ViewBag.data;
}
<script>
    function validation() {
        var name = document.myform.name.value;
        var filePath = document.myform.filepath.value;
        var desc = document.myform.description.value;

      

        if (name.length > 100 || name.length < 3) {
            alert("name must be between 3 and 100 length");
            return false;
        } else if (desc.length > 180) {
            alert("description can't be more than 150 characters");
            return false;
        } else if (filePath.length > 150) {
            alert("file length is too long");
            return false;
        } else {
            return true;
        }
    }

    function CountCharsName(obj){
        document.getElementById("name_count").innerHTML = '100 . ' + obj.value.length ;
    }
    function CountCharsFilePath(obj){
        document.getElementById("filepath_count").innerHTML = '180 . ' + obj.value.length;

    }
    function CountCharsDesc(obj){
        document.getElementById("desc_count").innerHTML = '150 . ' + obj.value.length;

    }
</script>





<body>
    <form method="post" name="myform" asp-action="Create" enctype="multipart/form-data" onsubmit="return validation()">

        <input type="file" asp-for="FileToCopy" value="@Model.FileToCopy" />

        <div class="form-group">
            <label asp-for="Name">Name</label>
            <input asp-for="Name" name="name" type="text" onkeyup="CountCharsName(this)" class="btn-primary" placeholder="Enter Name">
            <small id="name_count">100 . @Model.Name.Length</small>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>



        <br />
        <div class="form-group">
            <label asp-for="FilePath">FilePath</label>
            <input asp-for="FilePath" onkeyup="CountCharsFilePath(this)" name="filepath" type="text" class="btn-primary" placeholder="Enter FilePath">
            <small id="filepath_count">180 . @Model.FilePath.Length </small>
            <span asp-validation-for="FilePath" class="text-danger"></span>
        </div>

        <br />
        <div class="form-group">
            <label asp-for="DateCreated">DateCreated</label>
            <input asp-for="DateCreated" type="date" class="btn-primary" placeholder="Enter DateCreated">
            <span asp-validation-for="DateCreated" class="text-danger"></span>
        </div>

        <br />
        <input type="hidden" asp-for="FileToCopy" value="@Model.FileToCopy"/>
        <input type="hidden" asp-for="ProjectId" value="0" />

        <div class="form-group">
            <label asp-for="ProjectName">ProjectName</label>
            <select asp-for="ProjectName">
                @foreach (var project in allProjectNames)
                {
                    <option itemid="@project.Id.ToString()" onclick="assignToModel('@project.ProjectName')">@project.ProjectName</option>

                }
            </select>
            <span asp-validation-for="ProjectName" class="text-danger"></span>
        </div>

        <br />
        <div class="form-group">
            <label asp-for="Size">Size : @Model.Size</label>
            <input asp-for="Size" type="hidden" class="btn-primary" placeholder="Size">
            <span asp-validation-for="Size" class="text-danger"></span>
        </div>
        <br />
        <div class="form-group">
            <label asp-for="Description">Description</label>
            <input asp-for="Description" type="text" onkeyup="CountCharsDesc(this)" name="description" class="btn-primary" placeholder="Description">
            <small id="desc_count" >150 . @Model.Description.Length</small>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <br />

        <div class="form-group">
            <label asp-for="Type">Type : @Model.Type</label>
            <input asp-for="Type" type="hidden" class="btn-primary" placeholder="Enter Type">
            <span asp-validation-for="Type" class="text-danger"></span>
        </div>
        <br />
        <br />
        <br />


        <br />
        <button type="submit" class="btn-primary">Submit</button>
    </form>

</body>