@using FileExplorer.DTOs;
@model ProjectDTO
@{
    ViewData["Title"] = "Edit Project";
    Layout = "CustomLayout";
}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/limonte-sweetalert2/7.11.0/sweetalert2.css" />
<script src="https://cdnjs.cloudflare.com/ajax/libs/limonte-sweetalert2/7.11.0/sweetalert2.all.min.js"></script>
<script>
    function validation() {
        var projectName = document.myform.projectname.value;

        if (projectName.length < 3 || projectName.length > 100) {
            sweetAlert({
                title: "project name must be between 3 and 100 characters",
                text:"",
                icon:"error",
                timer:5000,
                showConfirmButton: false
            });

            return false;
        } else {
            sweetAlert({
                title: "Done!",
                text: "Project Updated",
                icon: "success",
                timer: 4000,
                showConfirmButton: false
            });
            return true;
        }
    }
    function CountCharsProject(obj) {
        document.getElementById("porject_name_count").innerHTML = '100 . ' + obj.value.length;
    }
</script>
<form method="post" onsubmit="return validation()" name="myform" asp-action="Edit">

    <input type="hidden" asp-for="Id" value="@Model.Id"/>
    <div class="form-group">
        <label asp-for="ProjectName" class="btn-primary">ProjectName</label>
        <input asp-for="ProjectName" name="projectname" onkeyup="CountCharsProject(this)" type="text" class="btn-primary" placeholder="Enter ProjectName">
        <small id="project_name_count">100 . @Model.ProjectName.Length</small>
        <span asp-validation-for="ProjectName" class="text-danger"></span>
    </div>
    <br />


    <br />
    <button type="submit" class="btn btn-primary">Submit</button>
</form>