@using FileExplorer.DTOs;
@model ICollection<ProjectDTO>

@{
    ViewData["Title"] = "Projects";
    Layout = "CustomLayout";
}

@if (Model != null)
{

    <div class="parent2">

        <br />
        <center>
            <h1>
                .  Projects  .
            </h1>
            @{
                if (TempData["Error"] != null)
                {
                    <h4>@TempData["Error"]</h4>
                }
                if (TempData["CreateError"] != null)
                {
                    <h4>@TempData["CreateError"]</h4>
                }
                if (TempData["EditError"] != null)
                {
                    <h4>@TempData["EditError"]</h4>
                }
                if (TempData["DeleteError"] != null)
                {
                    <h4>@TempData["DeleteError"]</h4>
                }
            }
            <center>
                <a asp-controller="Project" asp-action="Create" class="btn-primary">Add Project+</a>
                <a asp-action="Index" asp-controller="Home" class="btn-primary">Home</a>
            </center>
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Name</th>
                        <th scope="col">Id</th>
                        <th scope="col">Edit</th>
                        <th scope="col">Delete</th>
                    </tr>
                </thead>
                @{
                    var i = 1;

                    @foreach (var project in Model)
                    {
                        <tbody>
                            <tr>
                                <th scope="row">@i</th>

                                <td><center>@project.ProjectName</center></td>
                                <td><center>@project.Id</center></td>
                                <td><center><a asp-action="Edit" asp-controller="Project" asp-route-id="@project.Id" class="btn-edit">Edit</a></center></td>
                                <td><center> <a asp-action="Delete" asp-controller="Project" asp-route-id="@project.Id" class="btn-delete">Delete</a></center></td>

                            </tr>
                        </tbody>

                        i++;
                    }



                }
            </table>
        </center>

        <br />
    </div>
}