@using FileExplorer.DTOs;
@model ProjectDTO

@{
    ViewData["Title"] = "Create";
    Layout = "CustomLayout";
}
<br />
<br />

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/limonte-sweetalert2/7.11.0/sweetalert2.css" />
<script src="https://cdnjs.cloudflare.com/ajax/libs/limonte-sweetalert2/7.11.0/sweetalert2.all.min.js"></script>
<script type="text/javascript" src="~/lib/jquery/dist/jquery.js"></script>
<script type="text/javascript" src="~/lib/jquery/dist/jquery.min.js"></script>


 
@if (Model.CreateErrorTD != null)
{
    <small>@Model.CreateErrorTD</small>
}

@if (Model.Error!= null)
{
    <small>@Model.Error</small>
}
<center style="display:none" id="redirecttoprojectindex">
    <a asp-controller="Project" asp-action="Index" class="btn-primary">All Projects</a>

</center>

<form id="createprojectform" class="form-inline">

    <div class="form-group mb-2" style="position:center;">
        <label  class="form-control btn-primary"  >ProjectName</label>
        <input   id="createprojectformname"   type="text" name="projectname" class="form-control" placeholder="Enter ProjectName">
        <small id="projectnamecount" class="form-control" >100 / 0 </small>
        <span asp-validation-for="ProjectName" class="text-danger"></span>
    </div>
    <br />


    <br />
    <div class="form-group mb-2">

    <input type="button" id="createpeojectsubmit" class="btn btn-primary" value="submit" />
    </div >
</form>

<script src="~/js/Project.Create/ProjectCreate.js"> </script>
